{
  "dependencies": {
    "@bogeychan/elysia-etag": "^0.0.5",
    "@elysiajs/bearer": "^0.8.0",
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/cors": "^0.8.0",
    "@elysiajs/jwt": "^0.8.0",
    "@mikro-orm/cli": "6.1.6",
    "@mikro-orm/core": "6.1.6",
    "@mikro-orm/migrations-mongodb": "6.1.6",
    "@mikro-orm/mongodb": "6.1.6",
    "bun-promptx": "^0.2.0",
    "elysia": "^0.8.17",
    "elysia-helmet": "^2.0.0",
    "file-type": "^20.4.0",
    "inquirer": "^10.1.6",
    "inquirer-chalk-pipe": "^1.3.0",
    "log4js": "^6.9.1",
    "mikro-orm": "6.1.6",
    "mikro-orm-soft-delete": "^1.0.0-alpha.1",
    "mongodb": "^5.9.2",
    "object-path": "^0.11.8",
    "reflect-metadata": "^0.2.2",
    "sharp": "^0.33.5",
    "slugify": "^1.6.6",
    "typescript": "^5.5.4"
  },
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development bun --hot src/app.ts",
    "build": "bun build src/app.ts",
    "start": "NODE_ENV=production bun src/app.ts",
    "test": "bun test",
    "generate:admin": "bun ./src/generate/admin.ts",
    "generate:secrets": "bun ./src/generate/secret.ts",
    "generate:rsa-keys": "bun ./src/generate/rsaKeys.ts",
    "generate:convert-files": "bun ./src/generate/convertFiles.ts",
    "generate:migrate-data": "bun ./src/generate/dataMigrator.ts",
    "mikro-orm": "NODE_OPTIONS='--loader ts-node/esm --no-warnings' mikro-orm",
    "db:update": "NODE_OPTIONS='--loader ts-node/esm --no-warnings' mikro-orm schema:update --config ./db/config.ts --run",
    "db:drop": "NODE_OPTIONS='--loader ts-node/esm --no-warnings' mikro-orm schema:drop --config ./db/config.ts --run",
    "db:migrate:up": "NODE_OPTIONS='--loader ts-node/esm --no-warnings' mikro-orm migration:up --config ./db/config.ts",
    "db:migrate:down": "NODE_OPTIONS='--loader ts-node/esm --no-warnings' mikro-orm migration:down --config ./db/config.ts",
    "db:migrate:create": "NODE_OPTIONS='--loader ts-node/esm --no-warnings' mikro-orm migration:create -b --path ./db/migrations --config ./db/config.ts"
  },
  "devDependencies": {
    "@elysiajs/swagger": "^1.1.0",
    "@mikro-orm/seeder": "6.1.6",
    "@types/bun": "^1.1.6",
    "@types/node": "^20.14.13",
    "@types/object-path": "^0.11.4",
    "colors": "^1.4.0",
    "dotenv": "^16.4.5",
    "ts-node": "^10.9.2"
  }
}
